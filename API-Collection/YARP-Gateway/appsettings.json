{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Yarp": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:10080"
      },
      "Https": {
        "Url": "https://*:10443",
        "Certificate": {
          "Path": "",
          "Password": ""
        }
      }
    }
  },
  "EnforceHttpsRedirection": true,
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": ""
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "IdentityServerConfiguration": {
    "IdentityUrl": "https://localhost:9443"
  },
  "ReverseProxy": {
    "Routes": {
      "users-api-route": {
        "ClusterId": "users-api-cluster",
        "AuthorizationPolicy": "JWT_Policy",
        "Match": {
          "Path": "/users-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "products-api-route": {
        "ClusterId": "products-api-cluster",
        "AuthorizationPolicy": "JWT_Policy",
        "Match": {
          "Path": "/products-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "reports-api-route": {
        "ClusterId": "reports-api-cluster",
        "AuthorizationPolicy": "JWT_Policy",
        "Match": {
          "Path": "/reports-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "HealthCheck": {
        "Active": {
          "Enabled": "true",
          "Interval": "00:02:30",
          "Timeout": "00:02:30",
          "Policy": "ConsecutiveFailures",
          "Path": "/healthCheck"
        }
      },
      "Metadata": {
        "ConsecutiveFailuresHealthPolicy.Threshold": "3"
      },
      "users-api-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5443/"
          }
        }
      },
      "products-api-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:02:30",
            "Timeout": "00:02:30",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthCheck"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:6443/"
          }
        }
      },
      "reports-api-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:02:30",
            "Timeout": "00:02:30",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthCheck"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7443/"
          }
        }
      }
    }
  }
}